<div class="container">
  <h1>Tasks</h1>
  <% @tasks.each do |task| %>
    <div class="task">
      <%= link_to task_path(task), class: "flex-spaced" do %>
        <div class="completed-section">
          <% if task.completed %>
            <i class="far fa-check-square top-right-abs"></i>
          <% else %>
            <i class="far fa-square top-right-abs"></i>
          <% end %>
        </div>
        <div class="info-section">
          <h3><%= task.title %></h3>
        </div>
      <% end %>
      <div>
        <%= link_to edit_task_path(task) do %>
          <i class="far fa-edit"></i>
        <% end %>
        <%= link_to task_path(task), method: :delete, data: { confirm: "Sure?"} do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="actions">
    <%= link_to '+ New task', new_task_path, class: "btn btn-sucess" %>
  </div>
</div>
