<div class="container">
  <h1>Tasks</h1>
  <% @tasks.each do |task| %>
    <%= link_to show_path(task), :class => "task" do %>
      <div class="info-section">
        <h3><%= task.title %></h3>
        <p><%= task.details %></p>
      </div>
      <div class="completed-section">
        <% if task.completed %>
          <i class="far fa-check-square top-right-abs"></i>
        <% else %>
          <i class="far fa-square top-right-abs"></i>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
